import time

def tampilkan_kalimat_kata_per_huruf():
    kalimat = """

"Persahabatan online mengajarkan kita bahwa 
jarak dan waktu tidak pernah menjadi halangan 
untuk saling berbagi kebahagiaan, dukungan, dan cerita. 
Meskipun kita tidak bisa bertatap muka setiap hari, 
ikatan yang terjalin lewat layar tetap kuat, 
karena persahabatan sejati tak mengenal batasan fisik. 
Kita mungkin berbeda tempat, tapi hati kita selalu dekat, 
saling menguatkan dalam suka dan duka, 
meski hanya lewat pesan yang terkirim."
    """
    for huruf in kalimat:
        print(huruf, end='', flush=True)
        time.sleep(0.05) # Penundaan 0.05 detik per huruf

def main():
    jumlah_ulang = 1 # set jumlah pengulangan kalimat
    for i in range(jumlah_ulang):
            tampilkan_kalimat_kata_per_huruf()
            time.sleep(1) # Penundaan 1 detik sebelum pengulangan
            print('\n' + '-' * 40) # Pemisah antar pengulangan

# Memanggil fungsi main untuk menjalankan program 
main()