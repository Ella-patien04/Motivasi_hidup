import time

def tampilkan_kalimat_kata_per_huruf():
    kalimat = """

Hidup memang penuh tantangan,
tapi setiap langkah yang kamu ambil, 
sekecil apa pun, adalah bukti 
bahwa kamu sedang bergerak maju. 
Jangan takut gagal, 
karena dari kegagalan, 
kita belajar menjadi lebih kuat.
Percayalah.... 
bahwa setiap usaha yang kamu lakukan
akan membawa hasil di waktu yang tepat. 
Tetaplah berjuang, 
karena kamu lebih kuat 
dari apa yang kamu pikirkan, 
dan masa depan yang cerah akan menantimu 
jika kamu terus berusaha dan tidak menyerah.
    """
    for huruf in kalimat:
        print(huruf, end='', flush=True)
        time.sleep(0.05) # Penundaan 0.05 detik per huruf

def main():
    jumlah_ulang = 1 # set jumlah pengulangan kalimat
    for i in range(jumlah_ulang):
            tampilkan_kalimat_kata_per_huruf()
            time.sleep(1) # Penundaan 1 detik sebelum pengulangan
            print('\n' + '-' * 40) # Pemisah antar pengulangan

# Memanggil fungsi main untuk menjalankan program 
main()
